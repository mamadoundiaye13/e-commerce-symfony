{% extends 'base.html.twig' %}

{% block title %}Panier!{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
       <table class="table">
           <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantite</th>
                    <th>Total</th>
                </tr>
           </thead>
           <tbody>
               {% for item in items %}
                   <tr>
                       <td>{{ item.produit.nom }}</td>
                       <td>{{ item.produit.prix }}</td>
                       <td>{{ item.quantite }}</td>
                       <td>{{ item.produit.prix * item.quantite }}</td>
                       <td>
                           <a href="{{ path('panier_remove', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">
                               <i class="fas fa-trash"></i>
                           </a>
                       </td>
                   </tr>
               {% endfor %}
           </tbody>
           <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total :</td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>
           </tfoot>
       </table>
        <a href="{{ path('panier_achat') }}" class="btn btn-success float-right">
            Acheter
        </a>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}

{% endblock %}
